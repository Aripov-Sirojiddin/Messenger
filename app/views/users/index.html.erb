<% provide(:title, "All users") %>
<div class="container d-flex justify-content-center mt-3">
  <div class="d-flex flex-column align-items-center">
    <h2>All Users in DB</h2>
    <%= render "users/arrows" %>
    <ol>
      <% @users_to_show.each do |user| %>
        <li class="list-group-item p-4 w-100" id="user-<%= user.id %>">
          <%= link_to user do %>
            <%= render user %>
          <% end %>
        </li>
      <% end %>
    </ol>
    <%= render "users/arrows" %>
  </div>
</div>

