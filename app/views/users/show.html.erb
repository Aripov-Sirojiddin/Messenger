<% provide(:title, "@#{@user.username}") %>

<div class="d-flex justify-content-center mt-3">
  <div class="d-flex flex-row">
    <div class="d-flex flex-column align-items-center">
      <div class="d-flex flex-row">
        <%= render @user %>
        <% if @user == current_user %>
          <%= link_to "📝", edit_user_path(@user), class: "h3 text-decoration-none mt-4" %>
        <% end %>
      </div>
      <p><%= @user.bio %></p>
      <%= render "microposts/micropost_form" %>
      <br>
      <% if current_user == @user %>
        <%= render "layouts/vertical_nav", page: "Profile" %>
      <% end %>
    </div>
    <div class="d-flex flex-column align-items-center">
      <% if @user.microposts.any? %>
        <%= render "users/arrows" %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <%= render @microposts_to_show %>
        <%= render "users/arrows" %>
      <% else %>
        <p>Go ahead and create a post!</p>
        <p>They will show up here.</p>
      <% end %>
    </div>
  </div>
</div>

