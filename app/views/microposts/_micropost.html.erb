<li class="list-group-item" id="micropost-<%= micropost.id %>">
  <div class="d-flex flex-row">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <div class="container d-flex flex-row">
      <div class="d-flex flex-column">
        <span class="user"><%= micropost.user.name %></span>
        <span class="user"><%= link_to "@#{micropost.user.username}", micropost.user %></span>
      </div>
    </div>
    <span class="timestamp text-nowrap">Posted <%= time_ago_in_words(micropost.created_at) %> ago</span>
  </div>
  <span class="content"><%= micropost.content %></span>
</li>